---
title: "Books"
layout: layouts/page.njk
---

<h1>Books</h1>
<ul class="books">
{% for post in collections['books-info'] | head(-100, true) %}
<li>
	<img src="{{ post.data.coverImage }}" />
	<h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
	<h3>{{ post.data.publication }}</h3>
	<h3>{{ post.date | publicationDate }}</h3>
</li>
{% endfor %}
</ul>
